                                            <TextBlock Text="Install" />
                                        </Button>
                                        <Button Width="75" CommandParameter="001-sunset-1.png" Command="{Binding UninstallApp}">
                                            <TextBlock Text="Uninstall" />
                                        </Button>
                                    </StackPanel>
                                </Flyout>
                            </Button.Flyout>
                            <StackPanel>
                                <Image Height="30" Source="/Icons/001-sunset-1.png"/>
                                <TextBlock Text="Sunset" FontFamily="Consolas" Foreground="#99ADB7B7" FontSize="10" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </GridViewItem>
                    <GridViewItem>
                        <Button>
